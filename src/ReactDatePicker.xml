                    <caption>Placeholder</caption>
                    <description></description>
                    <translations>
                        <translation lang="en_US"></translation>
                    </translations>
                </property>
            </propertyGroup>
            <propertyGroup caption="Data source">
                <property key="dateFormat" type="enumeration" defaultValue="DATE">
                    <caption>Date format</caption>
                    <description></description>
                    <enumerationValues>
                        <enumerationValue key="DATE">Date</enumerationValue>
                        <enumerationValue key="MONTH">Month</enumerationValue>
                        <enumerationValue key="QUARTER">Quarter</enumerationValue>
                        <enumerationValue key="YEAR">Year</enumerationValue>
                        <enumerationValue key="TIME">Time</enumerationValue>
                        <enumerationValue key="DATETIME">Date and Time</enumerationValue>
                        <enumerationValue key="CUSTOM">Custom</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="timeInterval" type="expression" required="true" defaultValue="15">
                    <caption>Time interval</caption>
                    <description></description>
                    <returnType type="Integer" />
                </property>
                <property key="timeCaption" type="textTemplate" required="true">
                    <caption>Time caption</caption>
                    <description></description>
                    <translations>
                        <translation lang="en_US">Time</translation>
